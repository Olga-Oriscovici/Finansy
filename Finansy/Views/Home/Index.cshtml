    <!-- Add JavaScript to show/hide the About Us block -->
    <script>
        $(document).ready(function () {
            // When the About Us button is clicked, toggle the visibility of the About Us block
            $('#aboutUsBtn').click(function (event) {
                event.preventDefault();  // Prevent default anchor behavior
                $('#aboutUsInfo').toggle();
                $('#contactUsForm').hide(); // Toggle visibility of the About Us block
            });
        });
        // Toggle Contact Us form visibility
        $('#contactUsBtn').click(function (event) {
            event.preventDefault();  // Prevent default anchor behavior
            $('#contactUsForm').toggle();  // Toggle visibility of the Contact Us form
            $('#aboutUsInfo').hide();  // Hide the About Us section if Contact Us form is shown
        });
