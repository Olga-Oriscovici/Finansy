@using Finansy.ViewModels;
@model LoginVM

@{
    ViewData["Title"] = "Login";
}

<div class="row d-flex align-items-center justify-content-center ">
    <div class="col-md-3 card p-3">
        <h2 class="text-center text-info">Login</h2>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div> <!-- Добавлен класс для отображения ошибок -->

            <div class="mb-1">
                <label asp-for="Username" class="form-label"></label> <!-- Добавлен класс для соответствия Bootstrap 5 -->
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-1">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" /> <!-- Добавлен тип password -->
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-1 form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">
                    @Html.DisplayNameFor(a => a.RememberMe)
                </label>
            </div>

            <div class="row">
                <div class="col-8">
                    <a asp-action="Register" class="text-decoration-none float-start mt-2">Don't have an account?</a> <!-- Исправлен текст ссылки -->
                </div>
                <div class="col-4">
                    <input type="submit" value="Login" class="btn btn-primary btn-sm float-end" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}